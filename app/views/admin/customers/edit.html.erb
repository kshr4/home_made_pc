<h4><%= @customers.last_name %><%= @customers.first_name %>さんの会員情報編集</h4>
<%= render "public/shared/error_messages", resource: @customers %>
<%= form_with model: @customers, url: admin_customer_path do |f| %>
  <div class="row">
    <div class="col-sm-4">
      <table class = "table">
      <tr>
        <th>会員ID</th>
        <th><%= @customers.id %></th>
      </tr>
        <tr>
          <th>氏名</th>
          <th><%= f.text_field :last_name %> <%= f.text_field :first_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= f.text_field :email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <% if @customers.is_deleted %>
              <td>
                <class="text-secondary font-weight-bold">退会
            <% else %>
                <class="text-success font-weight-bold">有効
              </td>
            <% end %>
          </th>
        </tr>
      </table>
    </div>
  </div>
  <br>
  <%= f.submit '変更を保存', class: "btn btn-success" %>
<% end %>
