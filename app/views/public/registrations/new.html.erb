<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_public', class: 'new_public' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <%= f.label "名前　　　　　　　(姓)" %>
    <%= f.text_field :last_name, autofocus: true %>

    <%= f.label " (名)" %>
    <%= f.text_field :first_name %><br>

    <%= f.label "フリガナ　　　　(セイ) " %>
    <%= f.text_field :last_name_kana %>

    <%= f.label "(メイ)" %>
    <%= f.text_field :first_name_kana %>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<br>
<p>・既に登録済みの方
<%=link_to new_customer_session_path do%>こちら
<%end%>
からログインしてください。</p>

