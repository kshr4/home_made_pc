
<h4>会員情報編集</h4>

<body>

<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
  <table border="1">
    <tr>
      <th>氏名</th>
      <th> <%= f.text_field :last_name %>　<%= f.text_field :first_name %>　</th>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td> <%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %>　</td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>

  <br>
  <%= f.submit '編集内容を保存', class: "btn btn-success" %>
<% end %>
  <br>
</body>
<%=link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>
