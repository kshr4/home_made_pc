<h4>会員情報編集</h4>

<body>
<%= render "public/shared/error_messages", resource: @customer %>
<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-sm-4">
      <table class= "table">
        <tr>
          <td class="form-item">氏名</td>
          <td class="form-item-input"> <%= f.text_field :last_name , class: "form-control" %>　<%= f.text_field :first_name, class: "form-control" %></td>
        </tr>
        <tr>
          <td class="form-item">フリガナ</td>
          <td class="form-item-input"> <%= f.text_field :last_name_kana , class: "form-control" %>　<%= f.text_field :first_name_kana, class: "form-control" %></td>
        </tr>
        <tr>
          <td class="form-item">メールアドレス</td>
          <td class="form-item-input"><%= f.text_field :email , class: "form-control" %></td>
        </tr>
      </table>
    </div>
  </div>

  <br>
  <%= f.submit '編集内容を保存', class: "btn btn-success" %>
  <%=link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>
<% end %>
  <br>
</body>
